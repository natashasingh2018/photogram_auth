<div class="page-header">
    <a href="/photos/new" class="btn btn-lg btn-success">
      New Photo
      <i class="fa fa-plus"> </i>
    </a>
</div>

<% @photos.each do |photo| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
        <a href="/users/<%= photo.user_id %>"><%= photo.user.username%></a>
      <small><%= time_ago_in_words(photo.created_at) %> ago </small>
    </h3>
  </div>
  <div class="panel-body">
    <a href="/photos/<%= photo.id %>"><img src="<%= photo.image %>" width="100"></a>

    <p><%= photo.caption %></p>
    <% photo.comments.each do |comment| %>
    <a href="/users/<%= comment.user_id %>">  <p> <%= comment.user.username %> </p></a>
    <p> <%= comment.body %> </p>

    <% end %>

    <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>

    <% if photo.user_id == current_user.id %>
      <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
        <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

    <% end %>


  </div>
</div>

  <% end %>


